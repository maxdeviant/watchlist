<!doctype html>
<html lang="en">
<head>
    <% include _head %>
</head>
<body>
    <div class="container">
        <form method="post" action="/login">
            <div>
                <label for="username">Username</label>
                <input type="text" name="username">
            </div>
            <div>
                <label for="password">Password</label>
                <input type="password" name="password">
            </div>
            <input type="submit" value="login">
        </form>
        <% if (error) { %>
            <span><%= error %></span>
        <% } %>
    </div>
    <% include _footer %>
</body>
</html>
